# Example Terraform variables file
# Copy this to terraform.tfvars and update values as needed

aws_region     = "us-east-1"
project_name   = "my-company"
environment    = "production"
cluster_name   = "my-eks-cluster"
kubernetes_version = "1.29"

# VPC Configuration
vpc_cidr = "10.0.0.0/16"
public_subnet_cidrs = ["10.0.1.0/24", "10.0.2.0/24", "10.0.3.0/24"]
private_subnet_cidrs = ["10.0.11.0/24", "10.0.12.0/24", "10.0.13.0/24"]

# Restrict API access to specific IPs for production
cluster_endpoint_public_access_cidrs = ["0.0.0.0/0"]  # Update with your IP ranges

# Node Group Configuration
desired_node_count = 3
min_node_count     = 2
max_node_count     = 10
node_instance_types = ["t3.large"]
node_disk_size     = 100

# Logging
log_retention_days = 7

# Optional: Spot nodes for cost optimization
create_spot_node_group = false
spot_desired_size      = 1
spot_max_size          = 5
spot_instance_types    = ["t3.large", "t3a.large", "m5.large"]
